{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "tasks": {
    "generate:exports": {
      "inputs": ["src/**/*.ts", "src/**/*.tsx"],
      "outputs": ["package.json", "tsup.config.ts", "src/index.ts"],
      "cache": true
    },
    "build": {
      "dependsOn": ["^build", "generate:exports"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "test": {
      "dependsOn": ["build"],
      "outputs": []
    }
  }
}
